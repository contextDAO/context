{
  "name": "@unitedao/unite",
  "version": "1.0.20",
  "description": "Unite DAO base contracts AND SDK",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "author": {
    "name": "CryptoBenkei"
  },
  "files": [
    "/dist"
  ],
  "licence": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Unite-DAO/unite.git"
  },
  "scripts": {
    "lint": "eslint . --fix",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
    "build:contracts": "npm run clean && node build.js && npm run cp",
    "build:lib": "tsc",
    "clean": "rimraf ./dist",
    "cp": "copyfiles -u 1 ./src/**/*.json dist",
    "test": "jest tests/schema.test.ts --detectOpenHandles",
    "dev": "ts-node ./src/tools/dev.ts",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.17.12",
    "@tsconfig/node16": "^1.0.2",
    "@types/jest": "^27.5.1",
    "@types/minimist": "^1.2.2",
    "@types/node": "^17.0.35",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.26.0",
    "arlocal": "^1.1.38",
    "copyfiles": "^2.4.1",
    "esbuild": "^0.14.40",
    "eslint": "^8.16.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.1",
    "lint-staged": "^12.4.3",
    "minimist": "^1.2.6",
    "node-typescript": "^0.1.3",
    "prettier": "^2.6.2",
    "replace-in-file": "^6.3.3",
    "ts-jest": "^28.0.3",
    "ts-node": "^10.8.0",
    "typescript": "^4.7.2"
  },
  "dependencies": {
    "arweave": "^1.10.23",
    "redstone-smartweave": "^0.5.7"
  },
  "lint-staged": {
    "src/**/*": [
      "eslint --fix"
    ]
  }
}
